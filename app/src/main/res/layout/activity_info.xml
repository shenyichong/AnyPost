<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/infoMain"
    tools:context="com.alexshwn.shenyichong.anypost.infoActivity">

    <com.alexshwn.shenyichong.anypost.Topbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topbar"
        custom:leftBackground="#8A93DB"
        custom:leftText="menu"
        custom:leftTextColor="#F43542"
        custom:rightBackground="#8A93DB"
        custom:rightText="back"
        custom:rightTextColor="#F43542"
        custom:tiTle="AnyPost"
        custom:tiTleTextColor="#FFFFFF"
        custom:tiTleTextSize="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_title"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="联系邮箱："/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_address"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/email_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="shenyichong2003@163.com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/github_title"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/email_address"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Github地址："/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/github_address"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/github_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="https://github.com/shenyichong/anypost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/download_title"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/github_address"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="最新版本下载地址："/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/download_address"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/download_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="http://fir.im/AnyPost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/version_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
